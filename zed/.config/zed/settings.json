{
  "tab_bar": {
    "show": true
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Frappé"
  },
  "icon_theme": "Catppuccin Frappé",
  "ui_font_size": 16,
  "buffer_font_size": 16,

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "use_multiline_find": true
  },

  "scrollbar": { "show": "never" },
  "vertical_scroll_margin": 8,
  "current_line_highlight": "gutter",
  "tabs": {
    "file_icons": true
  },
  "use_autoclose": false,
  "inlay_hints": {
    "enabled": true
  },
  "wrap_guides": [80, 100],
  "terminal": { "button": false },

  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typecheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "rust-analyzer": {
      "checkOnSave": {
        "command": "clippy"
      },
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
